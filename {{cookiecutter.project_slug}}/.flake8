[flake8]
# Configure flake8 to work with black and isort
max-line-length = 100
extend-ignore = E203, W503, E501
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    .tox,
    .eggs,
    *.egg,
    build,
    dist,
    .pytest_cache,
    .mypy_cache,
    .coverage,
    htmlcov

# McCabe complexity threshold
max-complexity = 10

# Exclude specific files
per-file-ignores =
    __init__.py:F401
    tests/*:F401,F811
