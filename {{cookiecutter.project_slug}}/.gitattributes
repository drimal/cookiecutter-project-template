# Automatically normalize line endings for all text files
* text=auto

# Python files
*.py text eol=lf
*.pyx text eol=lf
*.pyi text eol=lf

# Shell scripts
*.sh text eol=lf
*.bash text eol=lf

# Windows scripts
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf

# Documentation
*.md text eol=lf
*.rst text eol=lf

# JSON/YAML
*.json text eol=lf
*.yaml text eol=lf
*.yml text eol=lf
*.toml text eol=lf

# Binary files
*.pyc binary
*.pyo binary
*.pkl binary
*.pickle binary
*.npy binary
*.npz binary
*.jpg binary
*.jpeg binary
*.png binary
*.gif binary
*.zip binary
*.tar binary
*.gz binary
